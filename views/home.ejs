<h1 class="title">
    Codieal / <%= title %>
</h1>

<section id="feed-posts">
    <h3>    Posts   </h3>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3"></textarea>
        <input type="submit" value="Post">
    </form>

    <div>
        <% for(post of posts) {%>

            <div>
                <p> <%= post.content %></p>
                <p> <%= post.user.name %> </p>
            </div>
        
        <%}%>
    </div>
</section>